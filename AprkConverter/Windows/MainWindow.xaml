<Window x:Class="AprkConverter.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Title="A'PROPOS project converter" Height="125" Width="350"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Background="White" VerticalAlignment="Top" BorderThickness="0 0 0 2" BorderBrush="#EDEFEA">
            <MenuItem Header="_File">
                <MenuItem x:Name="OpenProjectMenuItem" Header="Open Project" Click="OpenProjectMenuItem_Click" />
                <Separator />
                <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click" />
            </MenuItem>
        </Menu>
        <TextBlock x:Name="ProjectTextBlock" Margin="84,45,84,30"
                   Text="A'PROPOS project in not opened." />
        <Button x:Name="SaveButton" Content="Convert and Save" Margin="120,45,120,30" Visibility="Hidden"
                Click="SaveButton_Click" />
    </Grid>
</Window>
